{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "lint:js": "eslint 'packages/**/*.{js,ts}'",
    "lint:sol": "solhint 'packages/**/*.sol'",
    "lint": "npm-run-parallel lint:js lint:sol",
    "lint:fix:js": "eslint --fix 'packages/**/*.{js,ts}'",
    "lint:fix:sol": "prettier --write 'packages/**/*.sol'",
    "lint:fix": "npm-run-parallel lint:fix:js lint:fix:sol",
    "test-all": "lerna run test",
    "build": "lerna run build",
    "publish": "lerna publish"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "7.0.4",
    "lerna": "^4.0.0",
    "npm-run-parallel": "^0.6.0",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rollup": "^3.7.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "typescript": "^4.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
