{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "isolatedModules": true,
    "baseUrl": "src",
    "lib": ["ESNext"]
  },
  "exclude": ["./packages/*/dist"]
}
